# === Configurações do Bot Telegram ===
TELEGRAM_TOKEN="SEU_TOKEN_AQUI"

# === Configurações do Grupo Principal ===
# ID do grupo da OnCabo onde ficam os tópicos (onde usuários interagem)
# Exemplo: -1002966479273 (obtido com @userinfobot no grupo)
TELEGRAM_GROUP_ID="ID_DO_GRUPO_PRINCIPAL_AQUI"

# === Configurações de Tópicos ===
# ID do tópico de regras (opcional)
RULES_TOPIC_ID="87"
# ID do tópico de boas-vindas (opcional)
WELCOME_TOPIC_ID="89"
# ID do tópico de suporte gamer (obrigatório para /suporte)
SUPPORT_TOPIC_ID="148"

# === Configurações de Notificações ===
# ID do CANAL técnico para notificações internas (diferente do grupo principal)
# Este é um canal separado onde a equipe técnica recebe alertas de suporte
# Exemplo: -1003102389025 (canal privado da equipe)
# IMPORTANTE: Configure com o ID do seu canal técnico privado
TECH_NOTIFICATION_CHANNEL_ID="ID_DO_CANAL_TECNICO_AQUI"

# === Configurações de Administração ===
# IDs dos usuários que podem usar comandos administrativos (separados por vírgula)
# Exemplo: ADMIN_USER_IDS="123456789,987654321"
# Use @userinfobot para descobrir seu User ID
ADMIN_USER_IDS="ID_DO_ADMIN_AQUI"

# === Configurações de Link de Convite ===
# Tempo de expiração do link em segundos (padrão: 3600 = 1 hora)
INVITE_LINK_EXPIRE_TIME=3600
# Limite de membros que podem usar o link (padrão: 1)
INVITE_LINK_MEMBER_LIMIT=1

# === Configurações da API HubSoft ===
# Habilita ou desabilita a integração HubSoft (true/false)
HUBSOFT_ENABLED="true"
HUBSOFT_HOST="https://api.sua-instancia.hubsoft.com.br/"
HUBSOFT_CLIENT_ID="SEU_CLIENT_ID_AQUI"
HUBSOFT_CLIENT_SECRET="SEU_CLIENT_SECRET_AQUI"
HUBSOFT_USER="seu_usuario@email.com"
HUBSOFT_PASSWORD="SUA_SENHA_AQUI"

# === Endpoints da API HubSoft ===
# Configure os endpoints específicos do seu ERP (opcional - usa padrões se não definir)
HUBSOFT_ENDPOINT_TOKEN="/oauth/token"
HUBSOFT_ENDPOINT_CLIENTE="/api/v1/integracao/cliente"
HUBSOFT_ENDPOINT_ATENDIMENTO="/api/v1/integracao/atendimento"
HUBSOFT_ENDPOINT_ATENDIMENTO_MENSAGEM="/api/v1/integracao/atendimento/adicionar_mensagem"
HUBSOFT_ENDPOINT_ATENDIMENTO_ANEXO="/api/v1/integracao/atendimento/adicionar_anexo"
HUBSOFT_ENDPOINT_CLIENTE_ATENDIMENTO="/api/v1/integracao/cliente/atendimento"

# === Configurações Específicas de Gaming ===
# ID do tipo de atendimento criado para suporte gaming (consulte seu painel HubSoft)
HUBSOFT_TIPO_ATENDIMENTO_GAMING="101"
# ID do status para abrir atendimento (2 = Aguardando Análise)
HUBSOFT_STATUS_ATENDIMENTO_ABERTO="2"

# === Configurações do Banco de Dados ===
# Caminho para o arquivo do banco SQLite
DATABASE_FILE="data/database/sentinela.db"