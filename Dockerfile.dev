# =====================================
# OnCabito Gaming Bot - Development Dockerfile
# =====================================
# Otimizado para desenvolvimento com hot-reload

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user
RUN groupadd -r oncabito && useradd -r -g oncabito oncabito

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Create required directories
RUN mkdir -p data/database logs \
    && chown -R oncabito:oncabito /app

# Copy application code (será substituído pelo volume em dev)
COPY --chown=oncabito:oncabito src/ ./src/
COPY --chown=oncabito:oncabito main.py ./
COPY --chown=oncabito:oncabito .env.example ./
COPY --chown=oncabito:oncabito migrations/ ./migrations/
COPY --chown=oncabito:oncabito scripts/ ./scripts/

# Switch to non-root user
USER oncabito

# Environment variables
ENV PYTHONPATH=/app/src \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Run application
CMD ["python3", "main.py"]
